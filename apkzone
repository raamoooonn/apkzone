  <script>
    function filtrarApps() {
      const input = document.getElementById('buscador').value.toLowerCase();
      const apps = document.querySelectorAll('.apk-link');
      apps.forEach(app => {
        const texto = app.innerText.toLowerCase();
        app.style.display = texto.includes(input) ? 'block' : 'none';
      });
    }
  </script>
